<!DOCTYPE html>
<html lang="en">
<head>
   {{>meta}}
</head>
<body>

{{>navbar}}

<!-- main header -->
<div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">

            <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>

            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day"></p>
                    <p id="today_date"></p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span>0</span><sup>0</sup>C</p>
                        <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>            


{{>footer}}

<script src="js/main.js"></script>
<script>
    const getCurrentDay = () => {
        const weekdays = ["Sunday", "Monday", "Tueday", "Wednesday", "Thursday", "Friday", "Saturday"];
        const d = new Date();
        let days = weekdays[d.getDay()];
        
        
        let day = document.getElementById('day');
        day.innerText = days;
    };

    getCurrentDay();

    const getCurrentTime = () => {
        const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

        var currentTime = new Date();

        let today_date = document.getElementById('today_date')
        var date = currentTime.getDate();
        var month = months[currentTime.getMonth()];
        today_date.innerText = `${date} ${month}`;

    }

    getCurrentTime();
</script>

</body>
</html>